<% if (post.link) { %>
    <h1 itemprop="name">
        <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><span itemprop="headline"><%= post.title %></span></a>
    </h1>
<% } else if (post.title) { %>
    <% if (index) { %>
        <h1 itemprop="name">
            <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><span itemprop="headline"><%= post.title %></span></a>
        </h1>
    <% } else { %>
        <h1 class="<%= class_name %>" itemprop="name">
            <span itemprop="headline"><%= post.title %></span>
        </h1>
    <% } %>
<% } %>