<header id="header">
    <div class="testata">
        <img class="desktop" src="/images/full_sfondogatto.png" />
        <img class="mobile" src="/images/sfondogatto_mobile.png" />
    </div>
    <div id="header-main" class="header-inner">
        <div class="outer">
            <a href="<%- url_for() %>" id="logo">
                <%- (theme.customize.logo && theme.customize.logo.enabled ? '<i class="logo"></i>':'') %>
                    <span class="site-title">Home</span>
            </a>
            <nav id="main-nav">
                <% for (var i in theme.menu) { %>
                    <a class="main-nav-link" href="<%- url_for(theme.menu[i]) %>">
                        <%= i %>
                    </a>
                    <% } %>
            </nav>
            <!-- <i class="collapsable fa fa-bars"></i> -->
            <% if(theme.customize.profile && theme.customize.profile.enabled) { %>
                <% var profile = theme.customize.profile; %>
                    <nav id="sub-nav">
                        <div class="profile" id="profile-nav">
                            <a id="profile-anchor" href="javascript:;">
                                <img class="avatar" src="<%= ( profile.gravatar ? gravatar(profile.gravatar) : url_for(profile.avatar)) %>" />
                                <i class="fa fa-caret-down"></i>
                            </a>
                        </div>
                    </nav>
                    <% } %>
        </div>
    </div>

    <div id="main-nav-mobile" class="header-sub header-inner">
        <input type="checkbox" id="menuShowHide">
        <label for="menuShowHide"></label>
        <ul id="mainMenu">
            <% for (var i in theme.menu) { %>
                <li>
                    <a class="main-nav-link" href="<%- url_for(theme.menu[i]) %>">
                        <%= i %>
                    </a>
                </li>
                <% } %>
        </ul>
        <!-- <table class="menu-collapsed">
            <% for (var i in theme.menu) { %>
                <tr>
                    <td align="center">
                        <a class="main-nav-link" href="<%- url_for(theme.menu[i]) %>">
                            <%= i %>
                        </a>
                    </td>
                </tr>
                <% } %>
                    </tr>
        </table> -->
    </div>
</header>